{
	"name": "poapin-web-worker",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"cf-typegen": "wrangler types",
		"deploy": "npm run build && wrangler deploy",
		"dev": "npm run dev:setup && react-router dev",
		"dev:setup": "[ ! -f wrangler.jsonc ] && cp wrangler.local.jsonc wrangler.jsonc || true && [ ! -f .dev.vars ] && cp .dev.vars.example .dev.vars || true",
		"dev:secrets": "echo 'Local secrets (.dev.vars):' && cat .dev.vars 2>/dev/null || echo 'No .dev.vars file found. Run: npm run dev:setup'",
		"secrets:list": "wrangler secret list",
		"secrets:sync": "node scripts/sync-secrets.js",
		"secrets:put": "echo 'Usage: npm run secrets:put SECRET_NAME SECRET_VALUE'",
		"lint": "eslint . --ext .ts,.tsx,.js,.jsx",
		"lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
		"postinstall": "npm run cf-typegen",
		"preview": "npm run build && vite preview",
		"typecheck": "npm run cf-typegen && react-router typegen && tsc -b"
	},
	"dependencies": {
		"isbot": "^5.1.27",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-router": "^7.7.1"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.0.12",
		"@eslint/js": "^9.33.0",
		"@react-router/dev": "^7.7.1",
		"@tailwindcss/vite": "^4.1.4",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^20",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"eslint": "^9.33.0",
		"tailwindcss": "^4.1.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^6.3.3",
		"vite-tsconfig-paths": "^5.1.4",
		"wrangler": "^4.28.1"
	}
}
